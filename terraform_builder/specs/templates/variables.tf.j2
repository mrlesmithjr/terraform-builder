{%-   for provider, provider_config in args.providers.items() %}
{%-     if config != {} -%}
{%-       if provider_config['variables'] -%}
{%-         for variable, variable_config in provider_config['variables'].items() %}
variable "{{ variable }}" {
{%-           for key, value in variable_config.items() %}
    {{ key }} = "{{ value }}"
{%-           endfor %}
}
{%-         endfor %}
{%-       endif -%}
{%-     endif -%}
{%-   endfor %}
{%- endif %}